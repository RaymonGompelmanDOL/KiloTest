name: Podcast summary (scheduled)

on:
  schedule:
    - cron: "0 8 * * *"   # daily 08:00 UTC (adjust)
  workflow_dispatch: {}

jobs:
  summarize:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install deps
        run: |
          pip install feedparser requests

      - name: Run fetch + trigger Kilo
        env:
          RSS_URL: "https://anchor.fm/s/f7cac464/podcast/rss"
          KILO_WEBHOOK_URL: ${{ secrets.KILO_WEBHOOK_URL }}
        run: |
          python scripts/podcast_to_kilo.py
